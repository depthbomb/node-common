{
	"name": "@depthbomb/node-common",
	"version": "1.1.0",
	"author": "depthbomb",
	"description": "A set of common utilities and functions for Node.js",
	"license": "MIT",
	"engines": {
		"node": ">=19"
	},
	"keywords": [
		"typescript",
		"nodejs",
		"utilities"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./async": {
			"import": {
				"types": "./dist/lib/async.d.mts",
				"default": "./dist/lib/async.mjs"
			},
			"require": {
				"types": "./dist/lib/async.d.cts",
				"default": "./dist/lib/async.cjs"
			}
		},
		"./cancellation": {
			"import": {
				"types": "./dist/lib/cancellation.d.mts",
				"default": "./dist/lib/cancellation.mjs"
			},
			"require": {
				"types": "./dist/lib/cancellation.d.cts",
				"default": "./dist/lib/cancellation.cjs"
			}
		},
		"./decorators": {
			"import": {
				"types": "./dist/lib/decorators.d.mts",
				"default": "./dist/lib/decorators.mjs"
			},
			"require": {
				"types": "./dist/lib/decorators.d.cts",
				"default": "./dist/lib/decorators.cjs"
			}
		},
		"./fn": {
			"import": {
				"types": "./dist/lib/fn.d.mts",
				"default": "./dist/lib/fn.mjs"
			},
			"require": {
				"types": "./dist/lib/fn.d.cts",
				"default": "./dist/lib/fn.cjs"
			}
		},
		"./fs": {
			"import": {
				"types": "./dist/lib/fs.d.mts",
				"default": "./dist/lib/fs.mjs"
			},
			"require": {
				"types": "./dist/lib/fs.d.cts",
				"default": "./dist/lib/fs.cjs"
			}
		},
		"./lazy": {
			"import": {
				"types": "./dist/lib/lazy.d.mts",
				"default": "./dist/lib/lazy.mjs"
			},
			"require": {
				"types": "./dist/lib/lazy.d.cts",
				"default": "./dist/lib/lazy.cjs"
			}
		},
		"./queue": {
			"import": {
				"types": "./dist/lib/queue.d.mts",
				"default": "./dist/lib/queue.mjs"
			},
			"require": {
				"types": "./dist/lib/queue.d.cts",
				"default": "./dist/lib/queue.cjs"
			}
		},
		"./types": {
			"import": {
				"types": "./dist/lib/types.d.mts"
			},
			"require": {
				"types": "./dist/lib/types.d.cts"
			}
		}
	},
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/depthbomb/node-common.git"
	},
	"bugs": {
		"url": "https://github.com/depthbomb/node-common/issues"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"start": "node .",
		"build": "tsc",
		"dist": "tsdown",
		"release": "yarn dist && release-it",
		"lint": "eslint ./src --ext .ts"
	},
	"devDependencies": {
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.19.1",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"eslint": "^9.39.1",
		"release-it": "^19.0.6",
		"tsdown": "^0.16.6",
		"typescript": "^5.9.3"
	},
	"packageManager": "yarn@4.11.0"
}
