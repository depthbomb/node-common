{
	"name": "@depthbomb/node-common",
	"version": "1.0.0",
	"author": "depthbomb",
	"description": "A set of common utilities and functions for Node.js",
	"license": "MIT",
	"engines": {
		"node": ">=19"
	},
	"keywords": [
		"typescript",
		"nodejs",
		"electron"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		},
		"./async": {
			"import": {
				"types": "./dist/lib/async.d.mts",
				"default": "./dist/lib/async.mjs"
			},
			"require": {
				"types": "./dist/lib/async.d.ts",
				"default": "./dist/lib/async.js"
			}
		},
		"./cancellation": {
			"import": {
				"types": "./dist/lib/cancellation.d.mts",
				"default": "./dist/lib/cancellation.mjs"
			},
			"require": {
				"types": "./dist/lib/cancellation.d.ts",
				"default": "./dist/lib/cancellation.js"
			}
		},
		"./fn": {
			"import": {
				"types": "./dist/lib/fn.d.mts",
				"default": "./dist/lib/fn.mjs"
			},
			"require": {
				"types": "./dist/lib/fn.d.ts",
				"default": "./dist/lib/fn.js"
			}
		},
		"./fs": {
			"import": {
				"types": "./dist/lib/fs.d.mts",
				"default": "./dist/lib/fs.mjs"
			},
			"require": {
				"types": "./dist/lib/fs.d.ts",
				"default": "./dist/lib/fs.js"
			}
		},
		"./lazy": {
			"import": {
				"types": "./dist/lib/lazy.d.mts",
				"default": "./dist/lib/lazy.mjs"
			},
			"require": {
				"types": "./dist/lib/lazy.d.ts",
				"default": "./dist/lib/lazy.js"
			}
		},
		"./queue": {
			"import": {
				"types": "./dist/lib/queue.d.mts",
				"default": "./dist/lib/queue.mjs"
			},
			"require": {
				"types": "./dist/lib/queue.d.ts",
				"default": "./dist/lib/queue.js"
			}
		}
	},
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/depthbomb/node-common.git"
	},
	"bugs": {
		"url": "https://github.com/depthbomb/node-common/issues"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"start": "node .",
		"build": "tsc",
		"dist": "tsup",
		"release": "yarn dist && release-it",
		"lint": "eslint ./src --ext .ts"
	},
	"devDependencies": {
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.18.6",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"eslint": "^9.36.0",
		"release-it": "^19.0.5",
		"terser": "^5.44.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2"
	},
	"packageManager": "yarn@4.10.2"
}
